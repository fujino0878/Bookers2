<h1>Books</h1>
<% if flash[:notice] %>
<div class="alert alert-success">
<%= flash[:notice] %>
</div>
<% end %>

<table>
　<tr>
　　<th>Title</th>
　　<th>Body</th>
　</tr>
　<% @posts.each do |post| %>
　<tr>
　　<td><div class="title"><%= post.title %></div></td>
　　<td><div class="body"><%= post.body %></div></td>
　　<td><div class="show"><%= link_to "show", book_path(post.id) %></div></td>
　　<td><div class="destroy"><%= link_to "Destroy", book_path(post.id),method: :delete %></div></td>
　　<td><div class="edit"><%= link_to "Edit", edit_book_path(post.id) %></div></td>
　</tr>
　<% end %>
</table>

<h2>New Book</h2>
<%= form_for(@post) do |f| %>
 <%= render 'shared/error_messages' %>
    <h4>Title</h4>
   <div class="field"><%= f.text_field :title %></div> 
    <h4>Body</h4>
    <div class="field"><%= f.text_area :body %></div>
    <div class="actions"><%= f.submit 'Create Book' %></div>
<% end %>